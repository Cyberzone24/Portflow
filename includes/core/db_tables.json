{
    "role": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "caption": "VARCHAR(255) NOT NULL",
        "description": "TEXT"
    },
    "user": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "login_provider": "VARCHAR(255)",
        "role": "UUID",
        "username": "VARCHAR(255) NOT NULL UNIQUE",
        "password": "VARCHAR(255)",
        "email": "VARCHAR(320) UNIQUE",
        "activation_code": "VARCHAR(255)",
        "tfa_secret": "VARCHAR(255)",
        "notification_provider": "INT",
        "notification_setting": "INT",
        "language": "VARCHAR(255)",
        "ip_address": "VARCHAR(255)",
        "last_login": "TIMESTAMP WITH TIME ZONE",
        "last_login_attempt": "TIMESTAMP WITH TIME ZONE",
        "login_attempts": "INT",
        "created": "TIMESTAMP WITH TIME ZONE",
        "last_changed": "TIMESTAMP WITH TIME ZONE",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(role) REFERENCES role(uuid)"
    },
    "access": {
        "resource": "VARCHAR(255) NOT NULL",
        "role": "UUID NOT NULL",
        "access_right": "INT",
        "PRIMARY KEY": "(resource)",
        "FOREIGN KEY": "(role) REFERENCES role(uuid)"
    },
    "location": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "parent_location": "UUID",
        "caption": "VARCHAR(255)",
        "description": "TEXT",
        "type": "INT",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(parent_location) REFERENCES location(uuid)"
    },
    "device": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "location": "UUID NOT NULL",
        "caption": "VARCHAR(255)",
        "description": "TEXT",
        "type": "VARCHAR(255)",
        "mac_address": "VARCHAR(255)",
        "hostname": "VARCHAR(255)",
        "serial": "VARCHAR(255)",
        "position": "FLOAT",
        "size_x": "FLOAT",
        "size_y": "FLOAT",
        "size_z": "FLOAT",
        "item_group": "UUID",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(location) REFERENCES location(uuid)"
    },
    "device_port": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "device": "UUID NOT NULL",
        "caption": "VARCHAR(255)",
        "description": "TEXT",
        "position_x": "FLOAT",
        "position_y": "FLOAT",
        "position_z": "FLOAT",
        "rotation": "INT",
        "coupling": "BOOLEAN",
        "tags": "VARCHAR(255)",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(device) REFERENCES device(uuid)"
    },
    "connection": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "device_port_source": "UUID NOT NULL",
        "device_port_destination": "UUID",
        "caption": "VARCHAR(255)",
        "type": "VARCHAR(255)",
        "length": "FLOAT",
        "crossover": "BOOLEAN",
        "status": "INT",
        "speed": "FLOAT",
        "item_group": "UUID",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(device_port_source) REFERENCES device_port(uuid)",
        "FOREIGN KEY": "(device_port_destination) REFERENCES device_port(uuid)"
    },
    "vlan": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "caption": "VARCHAR(255)",
        "description": "TEXT",
        "vlan": "INT NOT NULL",
        "tagged": "BOOLEAN",
        "PRIMARY KEY": "(uuid)"
    },
    "connection_vlan": {
        "uuid": "UUID DEFAULT gen_random_uuid() NOT NULL",
        "connection": "UUID NOT NULL",
        "vlan": "UUID NOT NULL",
        "PRIMARY KEY": "(uuid)",
        "FOREIGN KEY": "(connection) REFERENCES connection(uuid)",
        "FOREIGN KEY": "(vlan) REFERENCES vlan(uuid)"
    }
}